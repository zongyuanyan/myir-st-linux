/* test HDMI*/
&ltdc {
    pinctrl-names = "default", "sleep";
    pinctrl-0 = <&ltdc_pins_a>;
    pinctrl-1 = <&ltdc_pins_sleep_a>;
    status = "okay";
    port {
            #address-cells = <1>;
            #size-cells = <0>;

            ltdc_ep0_out: endpoint@0 {
                          reg = <0>;
                          remote-endpoint = <&sii9022_in>;
                         };
        };
};

